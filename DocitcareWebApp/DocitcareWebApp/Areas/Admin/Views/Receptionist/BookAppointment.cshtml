
@{
    ViewBag.Title = "BookAppointment";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<head>
        <style>
            .ui-autocomplete {
                z-index: 9999999999 !important;
            }
            
        </style>
    </head>

<div class="row match-height">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title" id="from-actions-top-left">Slot Booking</h4>
                <a class="heading-elements-toggle"><i class="fa fa-ellipsis-v font-medium-3"></i></a>
                <div class="heading-elements">
                    <ul class="list-inline mb-0">
                        <li><a data-action="collapse"><i class="feather icon-minus"></i></a></li>
                        <li><a data-action="reload"><i class="feather icon-rotate-cw"></i></a></li>
                        <li><a data-action="expand"><i class="feather icon-maximize"></i></a></li>
                        <li><a data-action="close"><i class="feather icon-x"></i></a></li>
                    </ul>
                </div>
            </div>
            <div class="card-content collpase show">
                <div class="card-body">

                    <div class="form-body">
                        @*Top Selecting Department*@
                        <div class="form-group row">
                            <div class="form-group col-md-6 mb-3">
                                <label>Department</label>
                                <select class="select2-icons form-control" id="ddlDepartment">
                                    <option data-icon="fa fa-user-md" value="0">----Select Department----</option>
                                </select>
                            </div>

                            <div class="form-group col-md-6 mb-3">
                                <label>Doctor</label>
                                <select class="select2-icons form-control" id="ddlDoctorSlotBooking">
                                    <option data-icon="fa fa-user-md" value="0">----Select Doctor----</option>
                                </select>
                            </div>

                        </div>
                        @*Top Selecting Department*@



                        <div class="form-group row">
                            <div class="form-group col-md-6 mb-3">
                                <label>Select Date</label>
                                <div class="position-relative has-icon-left">
                                    <input type="text" id="txtSelectDate" class="form-control datepicker" name="date">
                                    <div class="form-control-position">
                                        <i class="fa fa-calendar-o"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-md-6 mb-3">
                                <label>Appointment Type</label>
                                <div class="position-relative has-icon-left">
                                    <select class="select2-icons form-control" id="ddlAppointType">
                                        <option data-icon="fa fa-clock-o" value="-1">--Select Patient Type--</option>
                                        <option data-icon="fa fa-clock-o" value="0">Out Patient</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        @* Showing Slots *@
                            <div class="card accordion collapse-icon accordion-icon-rotate">
                                <div class="form-body" id="showHideSlots">
                                    <div id="headingCollapse11" class="card-header primary" data-toggle="collapse" href="#collapse11" aria-expanded="true" aria-controls="collapse11">
                                        <a class="card-title lead" href="#">Select Slot</a>
                                    </div>
                                    <div id="collapse11" role="tabpanel" aria-labelledby="headingCollapse11" class="collapse show">
                                        <div class="form-group row">
                                            <div id="showNoSlots">
                                                <h3>No Slots Available</h3>
                                            </div>
                                            <div class="lists" id="showSlots">

                                            </div>
                                        </div>
                                    </div>

                                    @*Patient Info*@
                                 
                                </div>

                            </div>
                       
                    @*</div>*@

                        @* Showing Patient Details *@

                       

                  

                       
                    </div>

                        @*Modal *@

                        <div class="modal fade text-left" id="bootstrap" tabindex="-1" role="dialog" aria-labelledby="myModalLabel35" aria-hidden="true">
                            <div class="modal-dialog modal-lg" role="document">
                                <div class="modal-content">
                                    <div class="modal-header bg-success">
                                        <h3 class="modal-title" id="myModalLabel35"> Slot Booking</h3>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <hr />

                                    <div class="row justify-content-md-center">
                                        <div class="col-lg-6">
                                            Search Patient:  <input type="text" class="form-control col-10" id="txtSearchBox" />
                                        </div>
                                    </div>
                                  
                                    <form>
                                        <div class="modal-body">
                                            <div class="row">
                                                <fieldset class="form-group floating-label-form-group col-md-6">
                                                    <label>Slot Date</label>
                                                    <input type="text" class="form-control" id="txtSlotDate" placeholder="Slot Date" disabled>
                                                </fieldset>
                                                <fieldset class="form-group floating-label-form-group col-md-6">
                                                    <label>Slot Time</label>
                                                    <input type="text" class="form-control" id="txtSlotTime" placeholder="Slot Time" disabled>
                                                </fieldset>
                                            </div>
                                            <div class="row">
                                                <input type="hidden" id="txtUserId" name="userId">
                                                <fieldset class="form-group floating-label-form-group col-md-6">
                                                    <label>First Name</label>
                                                    <input type="text" class="form-control" id="txtFirstName" placeholder="First Name">
                                                </fieldset>
                                                <br>
                                                <fieldset class="form-group floating-label-form-group col-md-6">
                                                    <label>Last Name</label>
                                                    <input type="text" class="form-control" id="txtLastName" placeholder="Last Name">
                                                </fieldset>
                                                <br>
                                            </div>
                                            <div class="row">
                                                <fieldset class="form-group floating-label-form-group col-md-6">
                                                    <label>Mobile Number</label>
                                                    <input type="text" class="form-control" id="txtMobileNumber" placeholder="Mobile Number">
                                                </fieldset>
                                                <br>
                                                <fieldset class="form-group floating-label-form-group col-md-6">
                                                    <label>Date of Birth</label>
                                                    <input type="text" class="form-control datepicker" id="txtDob" placeholder="Date of Birth">
                                                </fieldset>
                                                <br>
                                            </div>
                                            <div class="row">
                                                <fieldset class="form-group floating-label-form-group col-md-6">
                                                    <label>Gender</label>
                                                    <div class="input-group">
                                                        <div class="d-inline-block custom-control custom-radio">
                                                            <input type="radio" id="rdoMale" value="0" name="gender" />
                                                            <label>Male</label>
                                                        </div>
                                                        <div class="d-inline-block custom-control custom-radio">
                                                            <input type="radio" id="rdoFemale" value="1" name="gender" />
                                                            <label>Female</label>
                                                        </div>
                                                    </div>
                                                </fieldset>
                                                <br>
                                                <fieldset class="form-group floating-label-form-group col-md-6">
                                                    <label>Martial Status</label>
                                                    <div class="input-group">
                                                        <div class="d-inline-block custom-control custom-radio">
                                                            <input type="radio" id="rdoMarried" value="0" name="martialstatus" />
                                                            <label>Married</label>
                                                        </div>
                                                        <div class="d-inline-block custom-control custom-radio">
                                                            <input type="radio" id="rdoSingle" value="1" name="martialstatus" />
                                                            <label>Single</label>
                                                        </div>
                                                        <div class="d-inline-block custom-control custom-radio">
                                                            <input type="radio" id="rdoOthers" value="2" name="martialstatus" />
                                                            <label>Others</label>
                                                        </div>
                                                    </div>
                                                </fieldset>
                                                <br>
                                            </div>
                                            <div class="row">
                                                <fieldset class="form-group floating-label-form-group col-md-6">
                                                    <label>Address</label>
                                                    <textarea class="form-control" id="txtAddress1" rows="3" placeholder="Address"></textarea>
                                                </fieldset>
                                                <br>
                                                <fieldset class="form-group floating-label-form-group col-md-6">
                                                    <label>Country</label>
                                                    <input type="text" class="form-control" id="txtCountry" placeholder="Country">
                                                </fieldset>
                                                <br>
                                            </div>
                                            <div class="row">
                                                <fieldset class="form-group floating-label-form-group col-md-6">
                                                    <label>State</label>
                                                    <input type="text" class="form-control" id="txtState" placeholder="State">
                                                </fieldset>
                                                <br>
                                                <fieldset class="form-group floating-label-form-group col-md-6">
                                                    <label>City</label>
                                                    <input type="text" class="form-control" id="txtCity" placeholder="City">
                                                </fieldset>
                                                <br>
                                            </div><div class="row">
                                                <fieldset class="form-group floating-label-form-group col-md-6">
                                                    <label>Fee Amount</label>
                                                    <input type="text" class="form-control" id="txtFeeAmount" placeholder="Fee Amount">
                                                </fieldset>
                                                <br>
                                                <fieldset class="form-group floating-label-form-group col-md-6">
                                                    <label>Reffered By</label>
                                                    <input type="text" class="form-control" id="txtRefferedBy" placeholder="Reffered By">
                                                </fieldset>
                                                <br>
                                            </div><div class="row">
                                                <fieldset class="form-group floating-label-form-group col-md-6">
                                                    <label>Notes</label>
                                                    <textarea class="form-control" id="txtNote" rows="3" placeholder="Notes"></textarea>
                                                </fieldset>
                                                <br>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <input type="reset" class="btn btn-outline-secondary btn-lg" data-dismiss="modal" value="close">
                                            <input type="submit" class="btn btn-outline-primary btn-lg" value="Book" id="btnBookAppointment">
                                        </div>
                                    </form>
                                </div>
                                </div>
                        </div>
                    </div>
                    </div>
            </div>
        </div>
    </div>


<script>
    var UserBranchUrl = '@Url.Action("LoggerUserBranches", "Receptionist")';
    var DepartmentDoctorUrl = '@Url.Action("GetDepartmentDoctor", "Receptionist")';
    var SlotUrl = '@Url.Action("ShowSlots", "Receptionist")';
